{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Astro Server",
        "type": "shell",
        "command": "./node_modules/.bin/astro dev",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": "^(.*)$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "Server started"
          }
        },
        "runOptions": {
          "runOn": "folderOpen"
        }
      }
    ]
  }