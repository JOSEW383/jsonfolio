---
import Listcheck from "@/components/icons/sections/list-check.astro";
import Badge from "../common/Badge.tsx";

interface Technology {
  Title: string;
  Description: string;
  tags: string[];
}

interface Technologies {
  technologies: Technology[];
}

const { technologies } = Astro.props;
---

<section id="technologies" data-aos="fade-up">
  <h2 class="flex gap-3"><Listcheck class="size-8" />Technologies</h2>
  {
    technologies.map((tecnology: Technology) => {
      return (
        <div class="flex flex-col gap-2 mt-5">
          <h3 class="text-lg font-bold">{tecnology.Title}</h3>
          <p>{tecnology.Description}</p>
          <div class="flex-wrap gap-2">
            {tecnology.tags.map((tag) => {
              return <Badge name={tag} />;
            })}
          </div>
        </div>
      );
    })
  }
  <p></p>
</section>
